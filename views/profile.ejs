<!doctype html>
<html>
<head>
    <title>My Game List - List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Best Games</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
  <h2>Available Platforms</h2>
  <ul id="platformList">
    <% if (messages && messages.length > 0) { %>
      <% messages.forEach(platform => { %>
        <li class="platform-item" data-slug="<%= platform.slug %>">
          <h3><%= platform.name %></h3>
          <p><%= platform.games_count %> games</p>
        </li>
      <% }) %>
    <% } else { %>
      <li>Loading platforms...</li>
    <% } %>
  </ul>

  <hr>

  <section id="games">
    <h2>Games List</h2>
    <div id="games-list" class="games-grid"></div>
  </section>
</div>

<script src="main.js"></script>

<script>
  document.querySelectorAll('.platform').forEach(item => {
    item.addEventListener('click', async () => {
      const slug = item.dataset.slug;
      console.log(`Loading games for: ${slug}`);

      const res = await fetch(`/games/${slug}`);
      const games = await res.json();

      const gameList = document.getElementById('gameList');
      if (!Array.isArray(games) || games.length === 0) {
        gameList.innerHTML = `<p>No games found for ${slug}</p>`;
        return;
      }

      // Render game info
      gameList.innerHTML = games.map(g => `
        <div style="margin-bottom: 10px; border-bottom: 1px solid #ccc;">
          <img src="${g.background_image || ''}" alt="${g.name}" style="width: 200px; border-radius: 6px;"><br>
          <strong>${g.name}</strong><br>
          Rating: ${g.rating} | Released: ${g.released || 'N/A'}
        </div>
      `).join('');
    });
  });
</script>

</body>
</html>
